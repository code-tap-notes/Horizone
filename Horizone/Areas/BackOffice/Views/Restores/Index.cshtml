@model IEnumerable<Horizone.Models.Restore>

@{
    ViewBag.Title = @StaticResource.Resources.Restore;
}

<h2>@StaticResource.Resources.Restore </h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestoreEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestoreFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestoreZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RestoreEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestoreFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestoreZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                 @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
