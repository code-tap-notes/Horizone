@model PagedList.IPagedList<Horizone.Models.Manuscript>
@using PagedList.Mvc;
@{
    ViewBag.Title = @StaticResource.Resources.Manuscript;
}

<h2> @StaticResource.Resources.Manuscript</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.Manuscript
        </th>
        <th>
            @StaticResource.Resources.OtherSiglum
        </th>
        <th>
            @StaticResource.Resources.Language
        </th>
        <th>
            @StaticResource.Resources.LeafNumber
        </th>
        <th>
            @StaticResource.Resources.NumberOfLine
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Index)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherSiglum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TochLanguage.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LeafNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfLine)
        </td>

        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
        </td>
    </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("index", new { page }))
