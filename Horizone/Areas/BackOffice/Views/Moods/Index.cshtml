@model IEnumerable<Horizone.Models.Mood>

@{
    ViewBag.Title = @StaticResource.Resources.Mood;
}

<h2>@StaticResource.Resources.Mood</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AbbreviationsMood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoodEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoodFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoodZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AbbreviationsMood)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoodEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoodFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoodZh)
        </td>

        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>
    </tr>
    }

</table>
