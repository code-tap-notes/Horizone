@model IEnumerable<Horizone.Models.NamePlace>

@{
    ViewBag.Title = @StaticResource.Resources.NamePlaces;
}

<h3>@StaticResource.Resources.NamePlaces </h3>
<h4>&#9658; @StaticResource.Resources.ClickButton @StaticResource.Resources.Search @StaticResource.Resources.NamePlaces @StaticResource.Resources.In @StaticResource.Resources.TochStory</h4>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionZh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InStory)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                <form class="form-group row" action="@Url.Action("SearchStory", "TochStories")" method="post" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-default" style="width:95%; text-align:left;"> <strong> @Html.DisplayFor(modelItem => item.Place) </strong></button>
                    <input class="form-control" type="hidden" id="Search" name="search" value="@item.Place" />
                </form>
            </td>
            <td>
                @Html.Raw(item.DescriptionEn)
            </td>
            <td>
                @Html.Raw(item.DescriptionFr)
            </td>
            <td>
                @Html.Raw(item.DescriptionZh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStory)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
