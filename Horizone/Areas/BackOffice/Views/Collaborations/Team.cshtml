@model IEnumerable<Horizone.Models.Collaboration>

@{
    ViewBag.Title = @StaticResource.Resources.Team;
}

<h2>@StaticResource.Resources.Team HISTOCHTEXT</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        
        <th>
            @StaticResource.Resources.LastName
        </th>
        <th>
            @StaticResource.Resources.FirstName
        </th>
        @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "en")
        {

            <th>
                @StaticResource.Resources.Fonction  @StaticResource.Resources.English
            </th>
            <th>
                @StaticResource.Resources.Affiliation  @StaticResource.Resources.English
            </th>
        }
        @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "fr")
        {
            <th>
                @StaticResource.Resources.Fonction  @StaticResource.Resources.French
            </th>
            <th>
                @StaticResource.Resources.Affiliation  @StaticResource.Resources.French
            </th>
        }
        @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "zh")
        {
            <th>
                @StaticResource.Resources.Fonction  @StaticResource.Resources.Chinese
            </th>
            <th>
                @StaticResource.Resources.Affiliation @StaticResource.Resources.Chinese
            </th>
        }       
       
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publications)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Team)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "en")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.FonctionEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AffiliationEn)
                    </td>
                }
                @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "fr")
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.FonctionFr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AffiliationFr)
                    </td>
                }
                @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "zh")
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.FonctionZh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AffiliationZh)
                    </td>
                }                               
               
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    @Html.Raw(item.Publications.First().Title)
                </td>
                <td>
                    @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                    @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                    @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                </td>
            </tr>
        }
    }
</table>
