@model IEnumerable<Horizone.Models.Collaboration>

@{
    ViewBag.Title = @StaticResource.Resources.Collaboration;
}

<h2>@StaticResource.Resources.Collaboration</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @StaticResource.Resources.Fonction  @StaticResource.Resources.English
        </th>
        <th>
            @StaticResource.Resources.Affiliation  @StaticResource.Resources.English
        </th>
        <th>
            @StaticResource.Resources.Fonction  @StaticResource.Resources.French
        </th>
        <th>
            @StaticResource.Resources.Affiliation  @StaticResource.Resources.French
        </th>
        <th>
            @StaticResource.Resources.Fonction  @StaticResource.Resources.Chinese
        </th>
        <th>
            @StaticResource.Resources.Affiliation @StaticResource.Resources.Chinese
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssociatedResearcher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collaborator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FonctionEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AffiliationEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FonctionFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AffiliationFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FonctionZh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AffiliationZh)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssociatedResearcher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Collaborator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
        </td>
    </tr>
    }
</table>
