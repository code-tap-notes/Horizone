@model IEnumerable<Horizone.Models.Collaboration>

@{
    ViewBag.Title = @StaticResource.Resources.Collaboration;
}
<h2>@StaticResource.Resources.Collaboration</h2>
<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.Title
        </th>
        <th>
            @StaticResource.Resources.LastName
        </th>
        <th>
            @StaticResource.Resources.FirstName
        </th>
        <th>
            @StaticResource.Resources.Summary
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th>
            @StaticResource.Resources.Email
        </th>
        <th>
            @StaticResource.Resources.Team
        </th>
        <th>
            @StaticResource.Resources.Visible
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publications)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (!item.Team)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visible)
        </td>
        <td>
            @Html.Raw(item.Publications.First().Title)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>
    </tr>
        }
    }

</table>
