@model List<Horizone.Models.LinkAndPress>

<ul class="nav navbar-nav">

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.Link <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><h4 class="dropdownTitle" style="color:cornflowerblue">@Model.Where(x=>x.Order==1).First().Target</h4></li>
            @foreach (var item in Model)
            {
                if (item.Order == 1)
                {
                    <li>
                        <a href=@item.Link>@item.Title </a>
                    </li>
                }
            }
            <li><h4 class="dropdownTitle" style="color:cornflowerblue">@Model.Where(x => x.Order == 2).First().Target</h4></li>
            @foreach (var item in Model)
            {
                if (item.Order == 2)
                {
                    <li>
                        <a href=@item.Link>@item.Title </a>
                    </li>
                }
            }
            <li><h4 class="dropdownTitle" style="color:cornflowerblue">@Model.Where(x => x.Order == 3).First().Target</h4></li>
            @foreach (var item in Model)
            {
                if (item.Order == 3)
                {
                    <li>
                        <a href=@item.Link>@item.Title </a>
                    </li>
                }
            }
        </ul>
    </li>
</ul>
