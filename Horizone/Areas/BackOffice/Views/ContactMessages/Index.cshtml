@model IEnumerable<Horizone.Models.ContactMessage>

@{
    ViewBag.Title = @StaticResource.Resources.ContactMessage;
}

<h2>@StaticResource.Resources.ListContact</h2>


<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.Title
        </th>
        <th>
            @StaticResource.Resources.LastName
        </th>
        <th>
            @StaticResource.Resources.FirstName
        </th>
        <th>
            @StaticResource.Resources.Email
        </th>
        <th>
            @StaticResource.Resources.PhoneNumber
        </th>
        <th>
            @StaticResource.Resources.SendDate
        </th>
        <th>
            @StaticResource.Resources.Message
        </th>
        <th>
            @StaticResource.Resources.Language
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendDate)
        </td>
        <td>
            @Html.Raw(item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SymbolLanguage)
        </td>
        <td>
           
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
