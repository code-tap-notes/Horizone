@model IEnumerable<Horizone.Models.Comment>

@{
    ViewBag.Title = @StaticResource.Resources.Comment;
}

<h2>@StaticResource.Resources.Comment</h2>


<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.SendDate
        </th>
        <th>
            @StaticResource.Resources.Content
        </th>
        <th>
            @StaticResource.Resources.News
        </th>
        <th>
            @StaticResource.Resources.User
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.News.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
        </td>       
        <td>
           
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
