@model IEnumerable<Horizone.Models.TochStory>

@{
    ViewBag.Title = @StaticResource.Resources.Search;

}
<h3>@StaticResource.Resources.TochStory</h3>

<h4>@StaticResource.Resources.SearchResult</h4>

@Model.Count() @StaticResource.Resources.SearchResult <b> " @ViewBag.Search " </b> @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.TochStory
<br />
@if (Model.Count() == 0)
{
    @StaticResource.Resources.AskSearchAdvantage;
    <form class="form-group row" action="@Url.Action("SearchIndex", "DashBoards" )" method="post" enctype="multipart/form-data">
        <button type="submit" class="btn btn-default" style="width:20%; text-align:left;"> @StaticResource.Resources.Search <b> " @ViewBag.Search " </b> </button>
        <input class="form-control" type="hidden" id="Search" name="search" value="@ViewBag.Search" />
    </form>
}

@foreach (var item in Model)
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SourceStory.SourceEn)
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => item.SourceStory.SourceEn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ThemeStory.ThemeEn)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.ThemeStory.ThemeEn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => item.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.Raw(item.Description)
        </dd>
        <dt></dt>
        <dd>
            @Html.ActionLink(@StaticResource.Resources.LearnMore, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
        </dd>
    </dl>

}


