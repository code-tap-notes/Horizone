@model IEnumerable<Horizone.Models.WritingTool>

@{
    ViewBag.Title = @StaticResource.Resources.WritingTool;
}

<h2>@StaticResource.Resources.WritingTool</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WritingToolEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WritingToolFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WritingToolZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WritingToolEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WritingToolFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WritingToolZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>

        </tr>
    }

</table>
