@model IEnumerable<Horizone.Models.Voice>

@{
    ViewBag.Title = @StaticResource.Resources.Voice;
}

<h2>@StaticResource.Resources.Voice</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AbbreviationVoice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoiceEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoiceFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoiceZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AbbreviationVoice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoiceEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoiceFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoiceZh)
            </td>

            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
