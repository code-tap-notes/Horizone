@model IEnumerable<Horizone.Models.MainContent>

@{
    ViewBag.Title = "Index";
}

<h2>Information</h2>

    @Html.ActionLink(@StaticResource.Resources.Add, null, "Create", new { @class = "btn btn-primary" })

<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.AboutUs
        </th>
        <th>
            @StaticResource.Resources.Contact
        </th>
        <th>
            @StaticResource.Resources.Presentation
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.AboutUs)
            </td>
            <td>
                @Html.Raw(item.Contact)
            </td>
            <td>
                @Html.Raw(item.Presentation)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id },new { @class = "btn btn-info" }) 
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }
   
</table>
