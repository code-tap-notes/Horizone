@model Horizone.Models.MainContent

@{
    ViewBag.Title = @StaticResource.Resources.Details;
}

<h2>@StaticResource.Resources.Details</h2>

<div>
    <h4>@StaticResource.Resources.MainContent</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @StaticResource.Resources.AboutUs
        </dt>

        <dd>
            @Html.Raw(Model.AboutUs)
        </dd>

        <dt>
            @StaticResource.Resources.Contact
        </dt>

        <dd>
            @Html.Raw(Model.Contact)
        </dd>

        <dt>
            @StaticResource.Resources.Presentation
        </dt>

        <dd>
            @Html.Raw(Model.Presentation)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink(@StaticResource.Resources.Return, "Index", null, new { @class = "btn btn-default" })
</p>
