@model IEnumerable<Horizone.Models.Material>

@{
    ViewBag.Title = @StaticResource.Resources.Material;
}

<h2>@StaticResource.Resources.Material</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaterialEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaterialZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
