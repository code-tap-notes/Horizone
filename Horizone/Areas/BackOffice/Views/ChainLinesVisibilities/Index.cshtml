@model IEnumerable<Horizone.Models.ChainLinesVisibility>

@{
                /**/

                ViewBag.Title = @StaticResource.Resources.ChainLinesVisibility;
}

<h2>@StaticResource.Resources.ChainLinesVisibility</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChainLinesVisibilityEn)  @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChainLinesVisibilityFr)  @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChainLinesVisibilityZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ChainLinesVisibilityEn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ChainLinesVisibilityFr)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ChainLinesVisibilityZh)
    </td>
    <td>
        @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
    </td>
</tr>
}

</table>
