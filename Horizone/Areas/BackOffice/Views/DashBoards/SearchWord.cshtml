@model IEnumerable<Horizone.Models.DictionaryTocharian>

@{
    ViewBag.Title = @StaticResource.Resources.DictionaryTocharian;
}

<h2>@StaticResource.Resources.DictionaryTocharian</h2>
@if (@Model.Count() == 0)
{
    <h3 class="text-danger"> @StaticResource.Resources.NotFound </h3>
    <h4>@StaticResource.Resources.AskAddDic</h4>
    <form class="form-group row" action="@Url.Action("AddDic", "DashBoards")" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-default"> <span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.Add  </button>
            <input class="form-control" type="hidden" id="Search" name="search" value=@ViewBag.Search />
        </div>
    </form>

}
<h4>@StaticResource.Resources.SearchResult</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TochLanguage.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordClass.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordSubClass.SubClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Word)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Francaise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.German)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chinese)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.TochLanguage.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordClass.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordSubClass.SubClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Word)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.English)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Francaise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.German)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chinese)
            </td>
        </tr>
    }

</table>
<p>
    <a class="btn btn-primary" href="@Url.Action("index", "DictionaryTocharians")">@StaticResource.Resources.Return</a>
</p>

