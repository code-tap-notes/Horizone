@model IEnumerable<Horizone.Models.TenseAndAspect>

@{
    ViewBag.Title = @StaticResource.Resources.TenseAndAspect;
}

<h2>@StaticResource.Resources.TenseAndAspect</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenseEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenseFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenseZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenseEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenseFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenseZh)
            </td>

            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
