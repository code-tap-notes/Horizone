                @Html.EditorFor(model => model.TenseEn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenseEn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenseFr, htmlAttributes: new { @class = "control-label col-md-2" }) @StaticResource.Resources.French
