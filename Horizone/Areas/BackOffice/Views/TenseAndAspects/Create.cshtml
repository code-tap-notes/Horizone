                @Html.EditorFor(model => model.Tense, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tense, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenseEn, htmlAttributes: new { @class = "control-label col-md-2" }) @StaticResource.Resources.English
