@model IEnumerable<Horizone.Models.Activity>

@{
    ViewBag.Title = @StaticResource.Resources.Activity;
}

<h2>@StaticResource.Resources.Activity</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.Language
        </th>
        <th>
            @StaticResource.Resources.DateActivity
        </th>
        <th>
            @StaticResource.Resources.Place
        </th>
        <th>
            @StaticResource.Resources.Activity
        </th>
        <th>
            @StaticResource.Resources.Description
        </th>
        <th>
            @StaticResource.Resources.Link
        </th>
        <th>
            @StaticResource.Resources.Picture
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Language.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofActivity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameActivity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UlrActivity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info" })

        </td>
    </tr>
}

</table>
