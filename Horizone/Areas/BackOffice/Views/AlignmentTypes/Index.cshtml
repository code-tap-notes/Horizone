@model IEnumerable<Horizone.Models.AlignmentType>

@{
    ViewBag.Title = @StaticResource.Resources.AlignmentType;
}

<h2>@StaticResource.Resources.AlignmentType </h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlignmentTypeEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlignmentTypeFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlignmentTypeZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlignmentTypeEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlignmentTypeFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlignmentTypeZh)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
             @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>

    </tr>
    }

</table>
