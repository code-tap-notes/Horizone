@model IEnumerable<Horizone.Models.SieveMark>

@{
    ViewBag.Title = @StaticResource.Resources.SieveMark;
}

<h2>@StaticResource.Resources.SieveMark</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SieveMarkEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SieveMarkFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SieveMarkZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SieveMarkEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SieveMarkFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SieveMarkZh)
        </td>

        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>
    </tr>
    }

</table>
