@model IEnumerable<Horizone.Models.Bibliography>

@{
    ViewBag.Title = "Bibliography";
}

<h2>Bibliography</h2>

<p>
    @Html.ActionLink("Ajouter une Bibliography", "Create", null, new { @class = "btn btn-primary" })
   
</p>
<div id="search">
    <form class="form-group row" action="@Url.Action("Search", "Bibliographies")" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-info bigBtn"> Rechercher</button>
        </div>
        <div class="form-group col-md-2">
            <label for="Auteur"> Auteur :</label>
            <a> <input type="text" class="form-control" id="Word" name="Word" /> </a> <br />

        </div>

        <div class="form-group col-md-2">
            <label for="Date">L'année publication:</label>
            <input class="form-control" type="number" id="Date" name="Date" />
        </div>

        <div class="form-group col-md-2">
            <label for="Title">Mot de recherche </label>
            <input class="form-control" type="text" id="Title" name="search" />
        </div>
        
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Journal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UlrBibliography)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Journal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UlrBibliography)
        </td>
        <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
            
       
        </td>
    </tr>
}

</table>
