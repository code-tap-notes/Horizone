
<!DOCTYPE html>
<html lang="@Session[Horizone.Common.CommonConstants.CurrentCulture]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HisTochText</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/layout.css" rel="stylesheet" />
</head>
<body background="~/Content/Background2.jpg" class="parallax">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(StaticResource.Resources.Office, "Index", "Dashboards", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.ManagementPage <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.MainContents </h4></li>
                            <li><a href="@Url.Action("create", "Maincontents")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Maincontents")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.Bibliography</h4></li>
                            <li><a href="@Url.Action("create", "Bibliographies")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Bibliographies")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.Activity</h4></li>
                            <li><a href="@Url.Action("create", "Activities")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Activities")">@StaticResource.Resources.List</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.ManagementManuscript <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><h4 class="dropdownTitle">Object Manuscript </h4></li>
                            <li><a href="@Url.Action("create", "ObjectManuscripts")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "ObjectManuscripts")">>@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">Proveniences</h4></li>
                            <li><a href="@Url.Action("create", "Proveniences")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Proveniences")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">Textcontents</h4></li>
                            <li><a href="@Url.Action("create", "Textcontents")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Textcontents")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">Manuscripts </h4></li>
                            <li><a href="@Url.Action("create", "Manuscripts")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Manuscripts")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">TochPhrases </h4></li>
                            <li><a href="@Url.Action("create", "TochPhrases")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "TochPhrases")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">TochStory </h4></li>
                            <li><a href="@Url.Action("create", "TochStories")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "TochStories")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">DictionaryTocharian </h4></li>
                            <li><a href="@Url.Action("create", "DictionaryTocharians")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "DictionaryTocharians")">@StaticResource.Resources.List</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.PageNews <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.Topic </h4></li>
                            <li><a href="@Url.Action("create", "Topics")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Topics")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.Comment</h4></li>
                            <li><a href="@Url.Action("create", "Comments")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Comments")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.News</h4></li>
                            <li><a href="@Url.Action("create", "News")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "News")">@StaticResource.Resources.List</a></li>


                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.ManagementUsers<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.ContactMessage </h4></li>
                            <li><a href="@Url.Action("index", "ContactMessages")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.Colaborator</h4></li>
                            <li><a href="@Url.Action("create", "Colaborateurs")">@StaticResource.Resources.Add</a></li>
                            <li><a href="@Url.Action("index", "Colaborateurs")">@StaticResource.Resources.List</a></li>
                            <li><h4 class="dropdownTitle">@StaticResource.Resources.User</h4></li>
                            <li><a href="@Url.Action("index", "Clients")">@StaticResource.Resources.List</a></li>
                        </ul>
                    </li>

                </ul>
                @using Microsoft.AspNet.Identity

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink(StaticResource.Resources.Hi + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li><a href="@Url.Action("Logout","Dashboards")"> <i class="glyphicon glyphicon-log-out"></i></a> </li>                    

                </ul>
              
            </div>
        </div>

    </div>
    <div class="navbar navbar-inverse navbar" style="background-color:steelblue;">                  
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink(@StaticResource.Resources.Home, "Index", "DashBoards")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.AboutUs, "About", "DashBoards")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.Contact, "Contact", "DashBoards")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.TochPhase, "Index", "TochPhrases")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.TochStory, "Index", "TochStories")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.Manuscript, "Index", "Manuscripts")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.Vocabulary, "Index", "DictionaryTocharians")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.News_Blog, "Index", "News")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.Bibliography, "index", "Bibliographies")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.Help, "Help", "Dashboards")</li>
                </ul>
                
            </div>                      
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Page Back Ofice Histochtext</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>