@model IEnumerable<Horizone.Models.FiberDistribution>

@{
    ViewBag.Title = @StaticResource.Resources.FiberDistribution;
}

<h2>@StaticResource.Resources.FiberDistribution</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DistributionEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistributionFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistributionZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DistributionEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistributionFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistributionZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                 @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
