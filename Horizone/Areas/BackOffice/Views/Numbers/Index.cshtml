@model IEnumerable<Horizone.Models.Number>
@{
    ViewBag.Title = @StaticResource.Resources.Number;
}

<h2>@StaticResource.Resources.Number</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WordNumberEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordNumberFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordNumberZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WordNumberEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordNumberFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordNumberZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            </td>
        </tr>
    }

</table>
