@model IEnumerable<Horizone.Models.Drying>

@{
    ViewBag.Title = @StaticResource.Resources.Drying;
}

<h2>@StaticResource.Resources.Drying</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DryingEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DryingFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DryingZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DryingEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DryingFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DryingZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
