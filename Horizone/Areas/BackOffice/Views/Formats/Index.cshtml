@model IEnumerable<Horizone.Models.Format>

@{
    ViewBag.Title = @StaticResource.Resources.Format;
}

<h2>@StaticResource.Resources.Format</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FormatEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormatFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormatZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FormatEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormatFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormatZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                 @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
