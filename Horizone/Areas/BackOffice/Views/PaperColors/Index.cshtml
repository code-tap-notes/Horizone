@model IEnumerable<Horizone.Models.PaperColor>
@{
    ViewBag.Title = @StaticResource.Resources.PaperColor;
}

<h2>@StaticResource.Resources.PaperColor</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaperColorEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaperColorFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaperColorZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaperColorEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaperColorFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaperColorZh)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>

    </tr>
    }

</table>
