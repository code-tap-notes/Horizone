@model IEnumerable<Horizone.Models.LanguageStage>

@{
    ViewBag.Title = @StaticResource.Resources.LanguageStage;
}

<h2>@StaticResource.Resources.LanguageStage </h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LanguageStageEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageStageFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageStageZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageStageEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageStageFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageStageZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                 @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
