                @Html.ValidationMessageFor(model => model.LanguageStageFr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageStageZh, htmlAttributes: new { @class = "control-label col-md-2" })
