@model IEnumerable<Horizone.Models.ManufaturingDefect>
@{
    ViewBag.Title = @StaticResource.Resources.ManufaturingDefect;
}

<h2>@StaticResource.Resources.ManufaturingDefect</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ManufaturingDefectEn) @StaticResource.Resources.English
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufaturingDefectFr) @StaticResource.Resources.French
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufaturingDefectZh) @StaticResource.Resources.Chinese
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManufaturingDefectEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufaturingDefectFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufaturingDefectZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                 @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
