@model IEnumerable<Horizone.Models.TochPhrase>

@{
    ViewBag.Title = @StaticResource.Resources.TochPhrase;
}

<h2>@StaticResource.Resources.TochPhrase</h2>

<div id="search">

    <form class="form-group row" action="@Url.Action("Search", "Bibliographies")" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-2">
            <br />
            @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })

        </div>
        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-info bigBtn"> @StaticResource.Resources.Search</button>
        </div>

        <div class="form-group col-md-6">
            <label for="search">@StaticResource.Resources.SearchWord </label>
            <input class="form-control" type="text" id="search" name="search" />
        </div>

    </form>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TochLanguage.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phrase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.English)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Francaise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chinese)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DerivedFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelatedLexemes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visible)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Language.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TochLanguage.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phrase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.English)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Francaise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chinese)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DerivedFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RelatedLexemes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visible)
                </td>
                <td>
                    @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                    @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                    @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                </td>
            </tr>
        }

    </table>
