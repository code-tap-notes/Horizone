@model IEnumerable<Horizone.Models.TochPhrase>

@{
    ViewBag.Title = @StaticResource.Resources.TochPhase;
}

<h2>@StaticResource.Resources.TochPhase</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.CodeIndex
        </th>
        <th>
            @StaticResource.Resources.Name
        </th>
        <th>
            @StaticResource.Resources.Content
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Francaise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sanskrit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chinois)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vietnam)
        </th>
        <th>
            @StaticResource.Resources.Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Index)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.English)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Francaise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sanskrit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chinois)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vietnam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
