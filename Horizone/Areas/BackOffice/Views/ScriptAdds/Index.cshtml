@model IEnumerable<Horizone.Models.ScriptAdd>

@{
    ViewBag.Title = @StaticResource.Resources.ScriptAdd;
}

<h2>@StaticResource.Resources.ScriptAdd </h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScriptAddEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScriptAddFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScriptAddZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ScriptAddEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScriptAddFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScriptAddZh)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
             @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>

    </tr>
    }

</table>
