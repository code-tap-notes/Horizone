@model IEnumerable<Horizone.Models.State>

@{
    ViewBag.Title = @StaticResource.Resources.GeneralState;
}

<h2>@StaticResource.Resources.GeneralState </h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StateEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StateEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateFr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateZh)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
                @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>
