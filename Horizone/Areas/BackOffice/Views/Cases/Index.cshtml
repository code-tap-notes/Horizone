@model IEnumerable<Horizone.Models.Case>

@{
    ViewBag.Title = @StaticResource.Resources.Case;
}

<h2>@StaticResource.Resources.Case</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCaseEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCaseFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCaseZh)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCaseEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCaseFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCaseZh)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
        </td>
    </tr>
    }
</table>
