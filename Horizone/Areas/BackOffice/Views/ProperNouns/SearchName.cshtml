@model IEnumerable<Horizone.Models.ProperNoun>

@{
    ViewBag.Title = @StaticResource.Resources.Search;

}
<h2> @StaticResource.Resources.ProperNoun</h2>
<h3>@StaticResource.Resources.SearchResult</h3>
@Model.Count() @StaticResource.Resources.SearchResult <b> " @ViewBag.Search " </b> @StaticResource.Resources.Found 

@if  (@Model.Count() !=0)
{
 <h5>&#9658; @StaticResource.Resources.ClickButton @StaticResource.Resources.Search @StaticResource.Resources.In @StaticResource.Resources.TochStory</h5>
}

@foreach (var item in Model)
{
    <div class="col-md-3">
        <form class="form-group row" action="@Url.Action("SearchStory", "TochStories" )" method="post" enctype="multipart/form-data">
            <button type="submit" class="btn btn-default" style="width:95%; text-align:left;">  @Html.DisplayFor(modelItem => item.Name) </button>
            <input class="form-control" type="hidden" id="Search" name="search" value="@item.Name" />
        </form>
    </div>
}
