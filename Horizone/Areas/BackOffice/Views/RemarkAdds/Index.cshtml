@model IEnumerable<Horizone.Models.RemarkAdd>

@{
    ViewBag.Title = @StaticResource.Resources.Remark;
}

<h2>@StaticResource.Resources.Remark</h2>

<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RemarkEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RemarkFr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RemarkZh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RemarkEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemarkFr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemarkZh)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>
    </tr>
    }

</table>
