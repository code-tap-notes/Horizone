@model IEnumerable<Horizone.Models.PartnerAndRelation>
@{
    ViewBag.Title = @StaticResource.Resources.Partner;
}
<h2> @StaticResource.Resources.Partner</h2>
<p>
    @Html.ActionLink(@StaticResource.Resources.Add, "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="autocontents">
    <p>
        <b> @StaticResource.Resources.SeeAlso : </b>
    </p>
    <ul>
        <li>&#10063; @Html.ActionLink(StaticResource.Resources.AboutProject, "About", "DashBoards")</li>
        <li>&#10063; @Html.ActionLink(StaticResource.Resources.AboutUs, "AboutUs", "DashBoards")</li>
        <li>&#10063; @Html.ActionLink(StaticResource.Resources.AssociatedResearcher, "AssociatedResearcher", "Collaborations")</li>
        <li>&#10063; @Html.ActionLink(StaticResource.Resources.Collaboration, "Collaboration", "Collaborations")</li>
        <li>&#10063; @Html.ActionLink(StaticResource.Resources.RelationInternational, "Relation", "PartnerAndrelations")</li>
        <li>&#10063; @Html.ActionLink(StaticResource.Resources.Contact, "Contact", "DashBoards")</li>
    </ul>
</div>
<div class="autocontents">
    <div class="row">
        @foreach (var item in Model)
        {
            if (item.Partner)
            {
                <div class="col-md-4">
                    @if (item.ImagePartners?.Count > 0)
                    {
                        <img style="width:80px;height:60px;" src="data:@item.ImagePartners.First().ContentType;base64,@Convert.ToBase64String(item.ImagePartners.First().Content)" alt="Photo" />
                    }
                    <h4>  @Html.DisplayFor(modelItem => item.Name)</h4>
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <hr />
                </div>
            }
        }
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            if (item.Partner)
            {
        <div class="col-md-4">
            <p><a class="btn btn-default" style="background-color: #A8A2CC;" href=@item.Link>@StaticResource.Resources.LearnMore &raquo;</a></p>

            @Html.ActionLink(@StaticResource.Resources.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            @Html.ActionLink(@StaticResource.Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </div>
            }
        }
    </div>
</div>


