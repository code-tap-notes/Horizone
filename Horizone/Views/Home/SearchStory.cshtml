@model IEnumerable<Horizone.Models.TochStory>

@{
    ViewBag.Title = @StaticResource.Resources.Search;

}


<h2>@StaticResource.Resources.SearchResult</h2>

<h3>@StaticResource.Resources.TochStory</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceStory.Source)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeStory.ThemeEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlasticRepresentation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainFindSpot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Francaise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chinese)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SourceStory.Source)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeStory.ThemeEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlasticRepresentation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MainFindSpot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.English)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Francaise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chinese)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
       
        <td>
            @Html.ActionLink(@StaticResource.Resources.LearnMore, "DetailsStory", new { id = item.Id }, new { @class = "btn btn-info" }) 
        </td>
    </tr>
    }

</table>
