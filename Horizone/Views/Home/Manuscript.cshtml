
@model IEnumerable<Horizone.Models.Manuscript>

@{
    ViewBag.Title = "Manuscript";
}

<h2>Manuscript</h2>
<div id="search">
    <form class="form-group row" action="@Url.Action("Search", "FrontMamuscripts")" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-info bigBtn"> Rechercher</button>
        </div>
        <div class="form-group col-md-2">
            <label for="Depot">Depot</label>
            <a> <input type="text" class="form-control" id="Depot" name="Depot" /> </a> <br />

        </div>

        <div class="form-group col-md-2">
            <label for="Index">Index</label>
            <input class="form-control" type="text" id="Index" name="Index" />
        </div>

        <div class="form-group col-md-2">
            <label for="Manuscript">Manuscript</label>
            <input class="form-control" type="text" id="Manuscript" name="search" />
        </div>

        

    </form>
</div>

<table class="table">
    <tr>
        <th>
            Index
        </th>
        <th>
           Object Manuscript
        </th>
        <th>
            MainFindSpot
        </th>
        <th>
            TextContent
        </th>
        
        <th>
            Language
        </th>
        <th>
           Script
        </th>
        <th>
            Repository
        </th>
        <th>
            Shelfmark
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TranslateEnglish)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
           Editor
        </th>
        <th>
            Bibliography
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ObjectManuscript.Manuscript)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provenience.MainFindSpot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextContent.TitleOfTheWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Script)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repository)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelfmark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslateEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslateFrench)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslateChinese)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bibliography)
            </td>
            <td>
              
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                
            </td>
        </tr>
    }

</table>
