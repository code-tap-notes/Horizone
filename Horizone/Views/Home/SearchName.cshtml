@model IEnumerable<Horizone.Models.ProperNoun>

@{
    ViewBag.Title = @StaticResource.Resources.Search;
}
<h2> @StaticResource.Resources.ProperNoun</h2>
<h3>@StaticResource.Resources.SearchResult</h3>
&#10063; @Model.Count() @StaticResource.Resources.SearchResult <b> " @ViewBag.Search " </b> @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.List @StaticResource.Resources.ProperNoun
<br />
@if (Model.Count() != 0)
{
    <h5>&#10148; @StaticResource.Resources.ClickButton @StaticResource.Resources.SearchBy @StaticResource.Resources.ProperNoun <b> " @ViewBag.Search " </b> @StaticResource.Resources.In @StaticResource.Resources.TochStory</h5>
    foreach (var item in Model)
    {
        <div class="col-md-3">
            <form class="form-group row" action="@Url.Action("SearchStory", "Home" )" method="post" enctype="multipart/form-data">
                <button type="submit" class="btn btn-default" style="width:50%; text-align:left;">  @Html.DisplayFor(modelItem => item.Name) </button>
                <input class="form-control" type="hidden" id="Search" name="search" value="@item.Name" />

            </form>
        </div>
    }
}
<br />
@if (Model.Count() == 0)
{
    <p>
        &#10067; @StaticResource.Resources.AskSearchAdvantage
    </p>
    <h5>&#10148; @StaticResource.Resources.ClickButton @StaticResource.Resources.SearchBy @StaticResource.Resources.ProperNoun <b> " @ViewBag.Search " </b> </h5>
    <br />
    <div class="col-md-3">
        <form class="form-group row"  action="@Url.Action("SearchIndex", "Home" )" method="post" enctype="multipart/form-data">
            <button type="submit" class="btn btn-default" style="width:20%; text-align:left; padding:5px;"> @StaticResource.Resources.Search <b> " @ViewBag.Search " </b> </button>
            <input class="form-control" type="hidden" id="Search" name="search" value="@ViewBag.Search" />
        </form>
    </div>
}
<br />
@if (@ViewBag.Search != null)
{
    <br />
    <p>
        &#10067; @StaticResource.Resources.AskSearchAdvantage @StaticResource.Resources.In @StaticResource.Resources.OtherSite
    </p>
    <br />
    var ulrA = "https://www.univie.ac.at/tocharian/?E_A_" + @ViewBag.Search;
    var ulrB = "https://www.univie.ac.at/tocharian/?E_B_" + @ViewBag.Search;
    var ulrG = "https://www.google.com/search?q=" + @ViewBag.Search + "&rlz=1C1CHBF_frFR865FR865&oq=" + @ViewBag.Search + " &aqs=chrome..69i57j35i39j69i60l2.1406j0j8&sourceid=chrome&ie=UTF-8";
    <a href="@ulrA"> @StaticResource.Resources.Search @StaticResource.Resources.Tocharian A<b> " @ViewBag.Search " @StaticResource.Resources.With CETOM </b></a>
    <br />
    <a href="@ulrB"> @StaticResource.Resources.Search @StaticResource.Resources.Tocharian B <b> " @ViewBag.Search " @StaticResource.Resources.With CETOM </b></a>
    <br />
    <a href="@ulrG"> @StaticResource.Resources.Search <b> " @ViewBag.Search " @StaticResource.Resources.With Google</b></a>
    <br />
}
<br />
@Html.ActionLink(StaticResource.Resources.Return, "ProperNoun", null, new { @class = "btn btn-primary", style = "width:90px" })
