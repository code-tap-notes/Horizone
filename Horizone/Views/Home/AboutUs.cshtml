@model IEnumerable<Horizone.Models.Collaboration>

@{
    ViewBag.Title = @StaticResource.Resources.AboutUs;
}


<div class="content">

    <h2> @StaticResource.Resources.AboutUs </h2>
    <div class="autocontents">
        <p>
            <b> @StaticResource.Resources.SeeAlso : </b>
        </p>
        <ul>

            <li>@Html.ActionLink(StaticResource.Resources.AboutProject, "About", "Home")</li>
            <li>@Html.ActionLink(StaticResource.Resources.Collaboration, "Collaboration", "Home")</li>
            <li>@Html.ActionLink(StaticResource.Resources.Contact, "Contact", "Home")</li>
        </ul>

    </div>
    <div class="autocontents">
        <p>
            <b>@StaticResource.Resources.Team </b>
        </p>
        @foreach (var item in Model)
        {
            if (item.Team)
            {
            <ul>
                <li>
                    <h3 class="underline">@Html.DisplayFor(modelItem => item.Title) @Html.DisplayFor(modelItem => item.LastName)  @Html.DisplayFor(modelItem => item.FirstName)</h3>
                    <div class="row">
                        <div class="col-lg-9">
                            <p>
                                @Html.Raw(item.Summary)
                            </p>
                            <a href=@Html.DisplayFor(modelItem => item.CV)>&diams; CV</a>
                            <br />
                            <p>
                                &diams; @StaticResource.Resources.Publications
                            </p>
                            @foreach (var item1 in item.Publications)
                            {
                                <a href=@item1.UlrBibliography>&#x27A4;@item1.Title &raquo;</a>
                                <br />
                            }
                            <br />
                            <a href="mailto:@item.Email" )>&diams; @StaticResource.Resources.SendEmail       </a>
                            <br />
                        </div>
                        <div class="col-lg-3">
                            @if (item.ImageCollaborations?.Count > 0)
                            {
                                <img src="data:@item.ImageCollaborations.First().ContentType;base64,@Convert.ToBase64String(item.ImageCollaborations.First().Content)" alt="Photo" style="width:30%" />
                            }                           
                        </div>
                    </div>
                </li>
   
            </ul>
            }
        }
    </div>
</div>
