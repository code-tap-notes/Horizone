@model IEnumerable<Horizone.Models.TochStory>

@{
    ViewBag.Title = ViewBag.Title = @StaticResource.Resources.TochStory;
}
<h4>@StaticResource.Resources.List @StaticResource.Resources.TochStory</h4>
<div class="autocontents">
    <p>
        <b> @StaticResource.Resources.Presentation @StaticResource.Resources.TochStory </b>
        @{Html.RenderAction("PresentationTochStory", "Home"); }

    </p>
</div>

<div id="search">

    <form class="form-group row" action="@Url.Action("SearchStory", "Home")" method="post" enctype="multipart/form-data">
        <div>
            @{Html.RenderAction("SearchForm", "Home"); }
        </div>
        
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceStory.SourceEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeStory.ThemeEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
               
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SourceStory.SourceEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThemeStory.ThemeEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>          
            <td>
                @Html.ActionLink(@StaticResource.Resources.Details, "DetailsStory", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function insertText(elemID, text) {
            document.getElementById(elemID).value += text;
        }
    </script>
    <script>
        function popitup(a) {
            window.open(a,
                'open_window',
                'menubar=no, toolbar=no, location=no, directories=no, status=no, scrollbars=no, resizable=no, dependent, width=800, height=620, left=0, top=0');
        }
    </script>
}
