@model IEnumerable<Horizone.Models.SearchResult>

@{
    ViewBag.Title = @StaticResource.Resources.SearchResult;
}

<h2>@StaticResource.Resources.SearchResult</h2>
<p>
    @Model.Count() @StaticResource.Resources.SearchResult <b> " @ViewBag.Search " </b> @StaticResource.Resources.Found
</p>
@foreach (var item in Model)
{
    if (item.NameTable == "TochStorys")
    {
<a href="@Url.Action("DetailsStory", "Home", new { id = item.IdResult })"> " @ViewBag.Search " @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.TochStory </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary) ...</p>
    }

    if (item.NameTable == "DictionaryTocharians")
    {
        <a href="@Url.Action("Details", "Vocabularies", new { id = item.IdResult })">  " @ViewBag.Search "  @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.DictionaryTocharian </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary)...</p>

    }
    if (item.NameTable == "Manuscripts")
    {
        <a href="@Url.Action("Details", "FontManuscripts", new { id = item.IdResult })"> " @ViewBag.Search " @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.Manuscript </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary)...</p>

    }
    if (item.NameTable == "TochPhrases")
    {
        <a href="@Url.Action("Details", "FontTochPhrases", new { id = item.IdResult })"> " @ViewBag.Search "  @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.TochPhrase </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary)...</p>

    }
    if (item.NameTable == "Bibliographys")
    {
        <a href="@Url.Action("Details", "FontBibliographies", new { id = item.IdResult })"> " @ViewBag.Search "  @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.Bibliography </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary)...</p>

    }
    if (item.NameTable == "ProperNouns")
    {
        <a href="#"> " @ViewBag.Search "  @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.ProperNoun </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary)...</p>

    }
    if (item.NameTable == "NamePlaces")
    {
        <a href="#"> " @ViewBag.Search "  @StaticResource.Resources.Found @StaticResource.Resources.In @StaticResource.Resources.NamePlaces </a>
        <br />
        <p>@Html.DisplayFor(modelItem => item.Summary)...</p>

    }
}
@if (@ViewBag.Search != null)
{
    @StaticResource.Resources.AskSearchAdvantage;
    <br />
    var ulrA = "https://www.univie.ac.at/tocharian/?E_A_" + @ViewBag.Search;
    var ulrB = "https://www.univie.ac.at/tocharian/?E_B_" + @ViewBag.Search;
    var ulrG = "https://www.google.com/search?q="+ @ViewBag.Search+"&rlz=1C1CHBF_frFR865FR865&oq=" + @ViewBag.Search + " &aqs=chrome..69i57j35i39j69i60l2.1406j0j8&sourceid=chrome&ie=UTF-8";
    <a href="@ulrA"> @StaticResource.Resources.Search @StaticResource.Resources.Tocharian A<b> " @ViewBag.Search " @StaticResource.Resources.With CETOM </b></a>
    <br />
    <a href="@ulrB"> @StaticResource.Resources.Search @StaticResource.Resources.Tocharian B <b> " @ViewBag.Search " @StaticResource.Resources.With CETOM </b></a>
    <br />
    <a href="@ulrG"> @StaticResource.Resources.Search <b> " @ViewBag.Search " @StaticResource.Resources.With Google</b></a>
    <br/>
}
