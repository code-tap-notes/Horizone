@model IEnumerable<Horizone.Models.News>

@{
    ViewBag.Title = @StaticResource.Resources.Media;
}

<h2>@StaticResource.Resources.Media</h2>

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Topic.TopicEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @StaticResource.Resources.Content
        </th>
        <th>
            @Html.DisplayNameFor(model => model.View)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Topic.TopicEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            <a href=@item.Content >@StaticResource.Resources.LearnMore &raquo;</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.View)
        </td>
        <td>
            @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:85px" })
        </td>

    </tr>
}

</table>
