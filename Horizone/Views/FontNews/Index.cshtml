@model IEnumerable<Horizone.Models.News>

@{
    ViewBag.Title = @StaticResource.Resources.News;
}

<h2>@StaticResource.Resources.News</h2>
<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.PublishedBy
            @Html.DisplayNameFor(model => model.Collaborator.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic.TopicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.View)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Collaborator.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.TopicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.View)
            </td>
            <td>
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            </td>
        </tr>
    }

</table>
