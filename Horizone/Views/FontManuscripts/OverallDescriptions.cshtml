            </dt>

            <dd>
                @Html.DisplayFor(model => model.Joint)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OtherSiglum)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OtherSiglum)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ExpeditionCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpeditionCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MapId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Map.NamePicture)  &#8594;
                <a onclick="insertImage('imageCarte','https://upload.wikimedia.org/wikipedia/commons/thumb/d/d0/Tarimbecken_3._Jahrhundert.png/1200px-Tarimbecken_3._Jahrhundert.png');">@StaticResource.Resources.SeeAlso @StaticResource.Resources.Maps</a>

