            <dt>
                @Html.DisplayNameFor(model => model.LeafNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LeafNumber)
            </dd>

        </dl>
    </div>


    <div class="col-md-6">
        <img style="width: 600px" id="imageCarte" src="" />
    </div>
   </div>
</div>
<p>
    @Html.ActionLink(StaticResource.Resources.Return, "Details", new { id = Model.Id }, new { @class = "btn btn-primary" })
</p>

    <script>
        function insertImage(imageCarte,ulr) {
            document.getElementById(imageCarte).src = ulr;
        }
    </script>
    