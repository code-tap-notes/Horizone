@model PagedList.IPagedList<Horizone.Models.Manuscript>
@using PagedList.Mvc;
@{
    ViewBag.Title = @StaticResource.Resources.Manuscript;
}

<h2> @StaticResource.Resources.Manuscript</h2>
<div class="autocontents">
    <p>
        <b> @StaticResource.Resources.Presentation @StaticResource.Resources.Manuscript </b>
    </p>
</div>
<div id="search">

    <form class="form-group row" action="@Url.Action("Search", "FontManuscripts")" method="post" enctype="multipart/form-data">

        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-info bigBtn"> @StaticResource.Resources.Search</button>
        </div>

        <div class="form-group col-md-4">
            <label for="search">@StaticResource.Resources.SearchWord </label>
            <input class="form-control" type="text" id="Search" name="search" />
        </div>
        <div>
            <p><strong>Insert:  </strong> </p>
            <a onclick="insertText('Search','ā');" href="#">ā  </a>
            <a onclick="insertText('Search','ä');" href="#">ä  </a>
            <a onclick="insertText('Search','ī');" href="#">ī  </a>
            <a onclick="insertText('Search','ö');" href="#">ö  </a>
            <a onclick="insertText('Search','ū');" href="#">ū  </a>
            <a onclick="insertText('Search','ü');" href="#">ü  </a>
            <a onclick="insertText('Search','ṅ');" href="#">ṅ  </a>
            <a onclick="insertText('Search','ñ');" href="#">ñ  </a>
            <a onclick="insertText('Search','ṃ');" href="#">ṃ  </a>
            <a onclick="insertText('Search','ś');" href="#">ś  </a>
            <a onclick="insertText('Search','ṣ');" href="#">ṣ  </a>
            <a onclick="insertText('Search','š');" href="#">š  </a>
            <a onclick="insertText('Search','ß');" href="#">ß  </a>
        </div>
    </form>
</div>

<table class="table">
    <tr>
        <th>
            @StaticResource.Resources.Manuscript
        </th>
        <th>
            @StaticResource.Resources.OtherSiglum
        </th>
        <th>
            @StaticResource.Resources.Language
        </th>
        <th>
            @StaticResource.Resources.LeafNumber
        </th>
        <th>
            @StaticResource.Resources.NumberOfLine
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherSiglum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TochLanguage.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeafNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfLine)
            </td>

            <td>
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("index", new { page }))
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function insertText(elemID, text) {
            document.getElementById(elemID).value += text;
        }
    </script>
}
