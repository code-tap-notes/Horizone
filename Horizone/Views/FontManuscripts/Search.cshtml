@model ICollection<Horizone.Models.Manuscript>

@{
    ViewBag.Title = @StaticResource.Resources.Search;

}


<h2>@StaticResource.Resources.SearchResult</h2>


<div class="col-md-2">

    <form class="form-group row" action="@Url.Action("Search", "FontManuscripts")" method="post" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="search">@StaticResource.Resources.SearchWord</label>
            <input type="text" class="form-control" id="search" name="search" /><br />
        </div>
        <div class="form-group ">
                <label for="index">Index</label>
                <input type="text" class="form-control" id="index" name="index" /><br />
        </div>
        <div class="form-group ">
                <label for="language">Language</label>
                <input type="text" class="form-control" id="language" name="language" /><br />
        </div>            
    </form>
</div>
<div class="col-md-2">
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-info"> @StaticResource.Resources.Search</button>
    </div>

</div>


<div class="col-md-8">

    <div class="bibliography row">
        <table class="table">
            <tr>
                <th>
                    @StaticResource.Resources.CodeIndex
                </th>
                <th>
                    @StaticResource.Resources.TochLanguage
                </th>
                <th>
                    @StaticResource.Resources.Transliteration
                </th>
                
               
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Index)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TochLanguage.Language)
                </td>
                <td>
                    @Html.Raw(item.Transliteration)
                </td>
                
                <td>
                    @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                </td>
            </tr>
            }

        </table>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

