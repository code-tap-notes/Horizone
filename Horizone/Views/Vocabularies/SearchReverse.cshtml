@model IEnumerable<Horizone.Models.ReverseDictionary>

@{
    ViewBag.Title = @StaticResource.Resources.ReverseDictionary;
}

<h2>@StaticResource.Resources.ReverseDictionary</h2>
<h4>@StaticResource.Resources.SearchResult</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Word)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReverseWord)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Word)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReverseWord)
        </td>
       
    </tr>
}

</table>
<p>
    @Html.ActionLink(StaticResource.Resources.Return, "Reverse", null, new { @class = "btn btn-primary", style = "width:85px" })
</p>
