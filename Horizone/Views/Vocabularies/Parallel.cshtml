@model PagedList.IPagedList<Horizone.Models.DictionaryTocharian>
@using PagedList.Mvc;
@{
    ViewBag.Title = @StaticResource.Resources.ParallelDictionary;
}

<h2>@StaticResource.Resources.ParallelDictionary</h2>
<div id="search">
    <form class="form-group row" action="@Url.Action("SearchWord", "Vocabularies")" method="post" enctype="multipart/form-data">
        <label for="Title"><strong> @StaticResource.Resources.Search </strong></label>
        <div>
            @{Html.RenderAction("SearchForm", "Home"); }
        </div>

    </form>
</div>

<table class="table">
    <tr>

        <th>
            @StaticResource.Resources.Tocharian A
        </th>
        <th>
            @StaticResource.Resources.Tocharian B
        </th>
        <th>
            @StaticResource.Resources.TochCorrespondence
        </th>
        <th>
            @StaticResource.Resources.TochCommon
        </th>
        <th>
            @StaticResource.Resources.Sanskrit
        </th>
        <th>
            @StaticResource.Resources.English
        </th>
        <th>
            @StaticResource.Resources.French
        </th>
        <th>
            @StaticResource.Resources.German
        </th>
        <th>
            @StaticResource.Resources.Latin
        </th>


    </tr>

    @foreach (var item in Model)
    {
        @*  if (@item.EquivalentTA != null && @item.EquivalentTB != null)
            { *@
        <tr>
            <td>
                <a href="@Url.Action("Details", "Vocabularies", new { id = item.Id })">&diams;  @item.EquivalentTA </a>
            </td>
            <td>
                <a href="@Url.Action("Details", "Vocabularies", new { id = item.Id })">&diams;  @item.EquivalentTB </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TochCorrespondence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TochCommon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sanskrit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.English)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Francaise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.German)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latin)
            </td>

        </tr>
        @*  } *@
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Parallel", new { page }))

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function insertText(elemID, text) {
            document.getElementById(elemID).value += text;
        }
    </script>
}
