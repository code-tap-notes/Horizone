                @Html.DisplayFor(model => model.WordSubClass.SubClassZh)
            </dd>


            <dt>
                @StaticResource.Resources.Number
            </dt>
            <dd>
                <table class="table table-striped">
                    @foreach (var item in Model.Numbers)
                    {
