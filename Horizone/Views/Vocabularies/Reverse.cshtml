@model IEnumerable<Horizone.Models.ReverseDictionary>
@{
    ViewBag.Title = @StaticResource.Resources.ReverseDictionary;
}

<h2>@StaticResource.Resources.ReverseDictionary</h2>
<div id="search">
    <form class="form-group row" action="@Url.Action("SearchReverse", "Vocabularies")" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-info bigBtn"><span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.Search </button>
        </div>

        <div class="form-group col-md-4">
            <label for="Title"> @StaticResource.Resources.SearchWord </label>
            <input class="form-control" type="text" id="Search" name="search" />
        </div>


        <div class="form-group col-md-4">
            <p><strong>Insert:  </strong> </p>
            <a onclick="insertText('Search','ā');" href="#">ā  </a>
            <a onclick="insertText('Search','ä');" href="#">ä  </a>
            <a onclick="insertText('Search','ī');" href="#">ī  </a>
            <a onclick="insertText('Search','ö');" href="#">ö  </a>
            <a onclick="insertText('Search','ū');" href="#">ū  </a>
            <a onclick="insertText('Search','ü');" href="#">ü  </a>
            <a onclick="insertText('Search','ṅ');" href="#">ṅ  </a>
            <a onclick="insertText('Search','ñ');" href="#">ñ  </a>
            <a onclick="insertText('Search','ṃ');" href="#">ṃ  </a>
            <a onclick="insertText('Search','ś');" href="#">ś  </a>
            <a onclick="insertText('Search','ṣ');" href="#">ṣ  </a>
            <a onclick="insertText('Search','š');" href="#">š  </a>
            <a onclick="insertText('Search','ß');" href="#">ß  </a>
        </div>
    </form>

</div>




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Word)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReverseWord)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <form class="form-group row" action="@Url.Action("SearchWord", "Home")" method="post" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-default" style="width:450px; text-align:left;">  @Html.DisplayFor(modelItem => item.Word) </button>
                    <input class="form-control" type="hidden" id="Search" name="search" value=@item.Word />
                </form>
            </td>
            <td>
                <form class="form-group row" action="@Url.Action("SearchWord", "Home")" method="post" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-default" style="width:450px; text-align:left;">  @Html.DisplayFor(modelItem => item.ReverseWord) </button>
                    <input class="form-control" type="hidden" id="Search" name="search" value=@item.ReverseWord />
                </form>
            </td>
        </tr>
    }

</table>
