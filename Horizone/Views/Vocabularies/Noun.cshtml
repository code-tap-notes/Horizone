                        </form>
                    </li>
                    <li>
                        <form class="form-group row" action="@Url.Action("SearchLatin", "Vocabularies")" method="post" enctype="multipart/form-data">
                            <div class="form-group col-md-3">
                                <button type="submit" class="btn btn-info bigBtn" style="width:180px"> <span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.SearchLatin</button>
