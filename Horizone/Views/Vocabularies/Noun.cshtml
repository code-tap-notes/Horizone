@model IEnumerable<Horizone.Models.NounAdjective>

@{
    ViewBag.Title = @StaticResource.Resources.DictionaryTocharian;
}

<h2>@StaticResource.Resources.DictionaryTocharian - @StaticResource.Resources.Noun</h2>
<div class="autocontents">
    <p>
        <b> @StaticResource.Resources.Presentation @StaticResource.Resources.DictionaryTocharian </b>
        @{Html.RenderAction("PresentationDictionaryTocharian", "Home"); }
    </p>
</div>
<div class="col-md-10">
    <div id="search">
        <div class="btn-group">
            <div class="btn-group">
                <button type="button" class="btn btn-primary"> <span class="glyphicon glyphicon-search"></span>  @StaticResource.Resources.Search</button>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" style="width: 900px !important" role="menu">
                    <li>
                        <form class="form-group row" action="@Url.Action("Search", "Vocabularies")" method="post" enctype="multipart/form-data">

                            <div class="form-group col-md-3">
                                <button type="submit" class="btn btn-info bigBtn" style="width:180px"> <span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.SearchToch</button>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" id="Search" name="search" />
                            </div>
                            <div class="form-group col-md-1" style="font-size:medium; ">
                                <p><strong>@StaticResource.Resources.Insert  </strong> </p>
                            </div>
                            <div class="form-group col-md-3" style="font-size:medium; background-color: white;">
                                <a onclick="insertText('Search','ā');" href="#">ā  </a>
                                <a onclick="insertText('Search','ä');" href="#">ä  </a>
                                <a onclick="insertText('Search','ī');" href="#">ī  </a>
                                <a onclick="insertText('Search','ö');" href="#">ö  </a>
                                <a onclick="insertText('Search','ū');" href="#">ū  </a>
                                <a onclick="insertText('Search','ü');" href="#">ü  </a>
                                <a onclick="insertText('Search','ṅ');" href="#">ṅ  </a>
                                <a onclick="insertText('Search','ñ');" href="#">ñ  </a>
                                <a onclick="insertText('Search','ṇ');" href="#"> ṇ  </a>

                                <a onclick="insertText('Search','ṃ');" href="#">ṃ  </a>
                                <a onclick="insertText('Search','ś');" href="#">ś  </a>
                                <a onclick="insertText('Search','ṣ');" href="#">ṣ  </a>
                                <a onclick="insertText('Search','ṛ');" href="#"> ṛ  </a>
                                <a onclick="insertText('Search','ṭ');" href="#"> ṭ  </a>
                                <a onclick="insertText('Search','š');" href="#">š  </a>
                                <a onclick="insertText('Search','ß');" href="#">ß  </a>
                            </div>

                        </form>
                    </li>
                    <li>
                        <form class="form-group row" action="@Url.Action("SearchEnglish", "Vocabularies")" method="post" enctype="multipart/form-data">
                            <div class="form-group col-md-3">
                                <button type="submit" class="btn btn-info bigBtn" style="width:180px"> <span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.SearchEnglish</button>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" id="Search" name="search" />
                            </div>
                        </form>
                    </li>
                    <li>
                        <form class="form-group row" action="@Url.Action("SearchFrench", "Vocabularies")" method="post" enctype="multipart/form-data">
                            <div class="form-group col-md-3">
                                <button type="submit" class="btn btn-info bigBtn" style="width:180px"> <span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.SearchFrench</button>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" id="Search" name="search" />
                            </div>
                        </form>
                    </li>
                    <li>
                        <form class="form-group row" action="@Url.Action("SearchGerman", "Vocabularies")" method="post" enctype="multipart/form-data">
                            <div class="form-group col-md-3">
                                <button type="submit" class="btn btn-info bigBtn" style="width:180px"> <span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.SearchGerman</button>
                            </div>
                            <div class="form-group col-md-4">
