                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" id="Search" name="search" />
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="col-md-2" style="float:right;">
    <a href="@Url.Action("PrintVocabulaire", "Vocabularies")" class="btn btn-info">
        <span class="glyphicon glyphicon-print"></span> @StaticResource.Resources.Print
    </a>

    @*(Bo Layout) @Html.ActionLink(@StaticResource.Resources.Print, "PrintHistoire", "Home", new { @class = "btn btn-info", style = "width:90px" },new { onclick= "popitup(this.value);"})*@
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TochLanguage.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TochWord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Francaise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.German)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chinese)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.WordClass.Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WordSubClass.SubClass)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.WordClass.ClassEn == "Noun")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TochLanguage.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TochWord)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.English)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Francaise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.German)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chinese)
                </td>
                @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "en")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.WordClass.ClassEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WordSubClass.SubClassEn)
                    </td>
                }
                @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "fr")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.WordClass.ClassFr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WordSubClass.SubClassFr)
                    </td>
                }
                @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "zh")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.WordClass.ClassZh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WordSubClass.SubClassZh)
                    </td>
                }
                <td>
                    @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    }
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function insertText(elemID, text) {
            document.getElementById(elemID).value += text;
        }
    </script>
}
