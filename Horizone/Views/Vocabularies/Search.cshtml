@model ICollection<Horizone.Models.DictionaryTocharian>

@{
    ViewBag.Title = @StaticResource.Resources.Search;
}

<h2>@StaticResource.Resources.SearchResult</h2>
<div class="col-md-2">

    <form class="form-group row" action="@Url.Action("Search", "Vocabularies")" method="post" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="search">@StaticResource.Resources.SearchWord</label>
            <input type="text" class="form-control" id="search" name="search" /><br />
        </div>
        <div class="form-group ">
            <label for="WordClass">@StaticResource.Resources.WordClass</label>
            <input type="text" class="form-control" id="WordClass" name="WordClass" /><br />
        </div>
    </form>
</div>
<div class="col-md-2">
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-info"> @StaticResource.Resources.Search</button>
    </div>
</div>

<div class="col-md-8">

    <div class="bibliography row">
        <table class="table">
            <tr>
                <th>
                    @StaticResource.Resources.Words
                </th>
                <th>
                    @StaticResource.Resources.English
                </th>
                <th>
                    @StaticResource.Resources.French
                </th>
                <th>
                    @StaticResource.Resources.German
                </th>
                <th>
                    @StaticResource.Resources.Latin
                </th>
                <th>
                    @StaticResource.Resources.Chinese
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.English)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Francaise)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.German)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chinese)
                </td>
                <td>
                    @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
                </td>
            </tr>
            }
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
