@model IEnumerable<Horizone.Models.TochPhrase>

@{
    ViewBag.Title = @StaticResource.Resources.TochPhrase;
}

<h2>@StaticResource.Resources.TochPhrase</h2>
<div class="autocontents">
    <p>
        <b> @StaticResource.Resources.PresentationPhrase </b>
        @{Html.RenderAction("PresentationTochPhrase", "Home"); }

    </p>        
</div>
<div id="search">

    <form class="form-group row" action="@Url.Action("Search", "FontTochPhrases")" method="post" enctype="multipart/form-data">

        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-default bigBtn" style="background-color: #A8A2CC;"><span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.Search</button>
        </div>

        <div class="form-group col-md-2">
            <label for="search">@StaticResource.Resources.SearchWord </label>
            <input class="form-control" type="text" id="Search" name="search" />
        </div>
        <div class="form-group col-md-6">
            @{Html.RenderAction("SpecialCharacter", "Home"); }


        </div>
        <div class="form-group col-md-2">
            <a href="@Url.Action("PrintPhrase", "FontTochPhrases")" class="btn btn-default" style="background-color: #A8A2CC;">
                <span class="glyphicon glyphicon-print"></span>  @StaticResource.Resources.Print
            </a>

            @*(Bo Layout) @Html.ActionLink(@StaticResource.Resources.Print, "PrintHistoire", "Home", new { @class = "btn btn-info", style = "width:90px" },new { onclick= "popitup(this.value);"})*@
        </div>
    </form>
</div>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.TochLanguage.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phrase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Francaise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chinese)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DerivedFrom)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.TochLanguage.Language)
        </td>
        <td>
            <a href="@Url.Action("Details", "FontTochPhrases", new { id = item.Id })">&diams;  @item.Phrase </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.English)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Francaise)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chinese)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DerivedFrom)
        </td>
    </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function insertText(elemID, text) {
            document.getElementById(elemID).value += text;
        }
    </script>
}
