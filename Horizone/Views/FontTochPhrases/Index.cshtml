@model IEnumerable<Horizone.Models.TochPhrase>

@{
    ViewBag.Title = @StaticResource.Resources.TochPhrase;
}

<h2>@StaticResource.Resources.TochPhrase</h2>
<div class="autocontents">
    <p>
        <b> @StaticResource.Resources.PresentationPhrase </b>
        @{Html.RenderAction("PresentationTochPhrase", "Home"); }

    </p>        
</div>
<div id="search">

    <form class="form-group row" action="@Url.Action("Search", "FontTochPhrases")" method="post" enctype="multipart/form-data">

        <div class="form-group col-md-2">
            <br />
            <button type="submit" class="btn btn-info bigBtn"><span class="glyphicon glyphicon-search"></span> @StaticResource.Resources.Search</button>
        </div>

        <div class="form-group col-md-4">
            <label for="search">@StaticResource.Resources.SearchWord </label>
            <input class="form-control" type="text" id="Search" name="search" />
        </div>
        <div class="form-group col-md-4">
            <p><strong>Insert:  </strong> </p>
            <a onclick="insertText('Search','ā');" href="#">ā  </a>
            <a onclick="insertText('Search','ä');" href="#">ä  </a>
            <a onclick="insertText('Search','ī');" href="#">ī  </a>
            <a onclick="insertText('Search','ö');" href="#">ö  </a>
            <a onclick="insertText('Search','ū');" href="#">ū  </a>
            <a onclick="insertText('Search','ü');" href="#">ü  </a>
            <a onclick="insertText('Search','ṅ');" href="#">ṅ  </a>
            <a onclick="insertText('Search','ñ');" href="#">ñ  </a>
            <a onclick="insertText('Search','ṇ');" href="#"> ṇ  </a>

            <a onclick="insertText('Search','ṃ');" href="#">ṃ  </a>
            <a onclick="insertText('Search','ś');" href="#">ś  </a>
            <a onclick="insertText('Search','ṣ');" href="#">ṣ  </a>
            <a onclick="insertText('Search','ṛ');" href="#"> ṛ  </a>
            <a onclick="insertText('Search','ṭ');" href="#"> ṭ  </a>
            <a onclick="insertText('Search','š');" href="#">š  </a>
            <a onclick="insertText('Search','ß');" href="#">ß  </a>
        </div>
        <div class="form-group col-md-2">
            <a href="@Url.Action("PrintHistoire", "Home")" class="btn btn-info">
                <span class="glyphicon glyphicon-print"></span>  @StaticResource.Resources.Print
            </a>

            @*(Bo Layout) @Html.ActionLink(@StaticResource.Resources.Print, "PrintHistoire", "Home", new { @class = "btn btn-info", style = "width:90px" },new { onclick= "popitup(this.value);"})*@
        </div>
    </form>
</div>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.TochLanguage.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phrase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DerivedFrom)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.TochLanguage.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phrase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.English)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DerivedFrom)
            </td>

            <td>
                @Html.ActionLink(@StaticResource.Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-info", style = "width:90px" })
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function insertText(elemID, text) {
            document.getElementById(elemID).value += text;
        }
    </script>
}
