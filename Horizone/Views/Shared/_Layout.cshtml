<!DOCTYPE html>

<html lang="@Session[Horizone.Common.CommonConstants.CurrentCulture]">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HISTOCHTEXT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/layout.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/2.3.1/css/flag-icon.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="background-color:antiquewhite; box-shadow:0 2px 2px rgba(0,0,0, .5);" class="parallax">
    <div>
        <img style="width:100%" src="~/Image/bar1.jpg" class="logo" />
    </div>
    <div class="navbar navbar-expand-sm navbar-light navbar-fixed-top" style="color:Highlight; font-size:medium; background-color: lightgrey;">
        <div class="container">
            <div class="navbar-header" style="font-size:medium; font-weight:bold;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HISTOCHTEXT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="  font-size:medium; color:Highlight !important">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(StaticResource.Resources.Home, "Index", "Home")</li>
                </ul>
                <ul class="nav navbar-right">
                    <li><a href="@Url.Action("index","dashboards",new {area="backoffice" })">☆</a> </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="navbar-collapse collapse" style="background-color: #CF9; color:Highlight;font-weight:bold;text-shadow:0 2px 2px rgba(255,255,255, 0.7);">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink(StaticResource.Resources.AboutProject, "About", "Home")</li>
            <li>@Html.ActionLink(@StaticResource.Resources.TochPhrase, "Index", "FontTochPhrases")</li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.TochStory <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("ThemeStory", "Home")"> @StaticResource.Resources.ThemeStory </a></li>
                    <li><a href="@Url.Action("SourceStory", "Home")"> @StaticResource.Resources.SourceStory </a></li>
                    <li><a href="@Url.Action("NamePlace", "Home")">@StaticResource.Resources.NamePlaces</a></li>
                    <li><a href="@Url.Action("ProperNoun", "Home")">@StaticResource.Resources.ProperNoun</a></li>
                    <li><a href="@Url.Action("TochHistoire", "Home")">@StaticResource.Resources.All @StaticResource.Resources.TochStory</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.Manuscript <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("Index", "FontManuscripts")"> @StaticResource.Resources.Manuscript - @StaticResource.Resources.Text</a></li>
                    <li><a href="@Url.Action("IndexAnalyseMacroscopic", "FontManuscripts")">@StaticResource.Resources.AnalyseMacroscopic</a></li>
                    <li><a href="@Url.Action("AnalyseMaterial", "FontManuscripts")">@StaticResource.Resources.AnalyseMicroscopic</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.DictionaryTocharian <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li class="dropdown-submenu">
                        <a class="test" tabindex="-1" href="#">@StaticResource.Resources.Vocabulary<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Verb", "Vocabularies")">&diams; @StaticResource.Resources.Verb</a></li>
                            <li><a href="@Url.Action("Adverb", "Vocabularies")">&diams; @StaticResource.Resources.Adverb</a></li>
                            <li><a href="@Url.Action("Noun", "Vocabularies")">&diams; @StaticResource.Resources.Noun</a></li>
                            <li><a href="@Url.Action("Pronoun", "Vocabularies")">&diams; @StaticResource.Resources.Pronoun</a></li>
                            <li><a href="@Url.Action("AllProperNoun", "Vocabularies")">&diams; @StaticResource.Resources.ProperNoun</a></li>
                            <li><a href="@Url.Action("Adjective", "Vocabularies")">&diams; @StaticResource.Resources.Adjective</a></li>
                            <li><a href="@Url.Action("OtherWord", "Vocabularies")">&diams; @StaticResource.Resources.OtherWords</a></li>
                            <li><a href="@Url.Action("TocharianA", "Vocabularies")">&diams; @StaticResource.Resources.DictionaryTocharian A</a></li>
                            <li><a href="@Url.Action("TocharianB", "Vocabularies")">&diams; @StaticResource.Resources.DictionaryTocharian B</a></li>
                            <li><a href="@Url.Action("Vocabulaire", "Vocabularies")">&diams; @StaticResource.Resources.AllWords</a></li>
                        </ul>
                    </li>
                    <li class="dropdown-submenu">
                        <a class="test" tabindex="-1" href="#">@StaticResource.Resources.AbbreviationDictionary<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("AbbreviationGrammatical", "Vocabularies")">&diams; @StaticResource.Resources.GrammaticalAbbreviation</a></li>
                            <li><a href="@Url.Action("AbbreviationLanguage", "Vocabularies")">&diams; @StaticResource.Resources.Language - @StaticResource.Resources.Abbreviations</a></li>
                            <li><a href="@Url.Action("AbbreviationManuscript", "Vocabularies")">&diams; @StaticResource.Resources.Abbreviations - @StaticResource.Resources.Manuscript </a></li>

                            <li><a href="@Url.Action("Abbreviation", "Vocabularies")">&diams; @StaticResource.Resources.OtherAbbreviation</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink(@StaticResource.Resources.ReverseDictionary, "Reverse", "Vocabularies")</li>
                    <li>@Html.ActionLink(@StaticResource.Resources.ParallelDictionary, "Parallel", "Vocabularies")</li>

                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.News_Blog <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("ConferencesAndSymposia", "FontNews")"> @StaticResource.Resources.Conferences , @StaticResource.Resources.Symposia</a></li>
                    <li><a href="@Url.Action("ExpositionsAndMuseums", "FontNews")">  @StaticResource.Resources.Expositions , @StaticResource.Resources.Museums </a></li>
                    <li><a href="@Url.Action("Media", "FontNews")">  @StaticResource.Resources.Media</a></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.Activity <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("Publications", "Home")"> @StaticResource.Resources.Publications</a></li>
                    <li><a href="@Url.Action("ConferencesAndSeminar", "Home")"> @StaticResource.Resources.Conferences , @StaticResource.Resources.Seminars</a></li>
                    <li><a href="@Url.Action("Symposia", "Home")">  @StaticResource.Resources.Symposia</a></li>
                    <li><a href="@Url.Action("Missions", "Home")">  @StaticResource.Resources.Missions</a></li>
                </ul>
            </li>
            <li class="dropdown">
                @{Html.RenderAction("LinkMenu", "Home");}
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@StaticResource.Resources.References <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action( "Bibliographie", "FontBibliographies")"> @StaticResource.Resources.Bibliography</a></li>
                    <li><a href="@Url.Action("abbreviation", "FontBibliographies")"> @StaticResource.Resources.Abbreviations </a></li>
                    <li><a href="@Url.Action("Book", "FontBibliographies")"> @StaticResource.Resources.Book </a></li>
                </ul>
            </li>
            <li>@Html.ActionLink(@StaticResource.Resources.Help, "Aide", "Home")</li>
        </ul>
        <ul class="nav navbar-right">
            <!--Choice language-->
            @using (Html.BeginForm("ChangeCulture", "Base"))
            {
                <li style="background-color: gray !important; color: darkgreen !important">
                    @Html.Hidden("returnUrl", Request.RawUrl)
                    @Html.DropDownList("ddlCulture", new SelectList(new[] {
                        new {value="fr",text=StaticResource.Resources.French },
                        new {value="en",text=StaticResource.Resources.English  },
                        new {value="zh",text=StaticResource.Resources.Chinese },
                       // new {value="vi",text=StaticResource.Resources.VietNamese},
                       // new {value="ja",text=StaticResource.Resources.Japanese},
                       // new {value="de",text=StaticResource.Resources.German},
                    }, "value", "text", Session[Horizone.Common.CommonConstants.CurrentCulture]),new { onchange="this.form.submit();"})
                </li>
                <li>
                    @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "en")
                    {
                        <p class= "flag-icon-background flag-icon-us">.</p>
                    }
                    @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "fr")
                    {
                        <p class="flag-icon-background flag-icon-fr">.</p>
                    }
                    @if (Session[Horizone.Common.CommonConstants.CurrentCulture].ToString() == "zh")
                    {
                        <p class="flag-icon-background flag-icon-cn">.</p>
                    }
                </li>

            }
        </ul>
     

    </div><div class="navbar-collapse collapse">
    </div><div class="container body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @StaticResource.Resources.Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        },

            function insertText(elemID, text) {
                var elem = document.getElementById(elemID);
                elem.innerHTML += text;
            },
            function () {
                $(this).find("ul:first").slideDown(500);
            },
            function () {
                $(this).find("ul:first").hide(300);
            });
    </script>
</body>
</html>
